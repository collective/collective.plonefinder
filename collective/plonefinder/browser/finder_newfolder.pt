<metal:block use-macro="context/global_defines/macros/defines" />

<!-- $Id$ -->

<div id="finder-create-folder"
     i18n:domain="collective.plonefinder">
  <div id="finder-newfolder">
    <h4 class="pannelHeader"
        i18n:translate="header_create_new_folder">Create a new folder</h4>
    <form id="create-new-folder">
      <div class="field">
        <label>Title</label>
        <input type="text"
               name="folder-title"
               id="folder-title"
               value="" />
      </div>
      <div class="field">
        <label>Description</label>
        <textarea name="folder-description"
                  id="folder-description"></textarea>
      </div>
      <div class="formControls">
        <input type="button"
               value="submit"
               onclick="Browser.createFolder()" />
      </div>
    </form>
  </div>
</div>
